<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_dark"
>
    <TextView
            android:id="@+id/widget_title"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/spacing_half"
            style="@style/text_main"
    />
    <TextView
            android:id="@+id/widget_subtitle"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/widget_title"
            android:layout_margin="@dimen/spacing_half"
            style="@style/text_aux"
    />
    <ImageView
            android:id="@+id/widget_art"
            android:src="@drawable/ic_launcher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/spacing_half"
    />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/widget_art"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentBottom="true"
                  android:layout_margin="@dimen/spacing_half"
    >
        <ImageButton
                android:id="@+id/widget_ctrl_prev"
                android:src="@drawable/ic_prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
        />
        <ImageButton
                android:id="@+id/widget_ctrl_play"
                android:src="@drawable/ic_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
        />
        <ImageButton
                android:id="@+id/widget_ctrl_pause"
                android:src="@drawable/ic_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
        />
        <ImageButton
                android:id="@+id/widget_ctrl_next"
                android:src="@drawable/ic_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="?android:attr/borderlessButtonStyle"
        />
    </LinearLayout>
</RelativeLayout>