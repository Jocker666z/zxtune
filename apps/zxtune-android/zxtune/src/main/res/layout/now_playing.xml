<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  >
  <app.zxtune.ui.views.SpectrumAnalyzerView
    android:id="@+id/visualizer"
    style="@style/block"
    android:paddingLeft="@dimen/spacing_full"
    android:paddingRight="@dimen/spacing_full"
    android:paddingTop="@dimen/spacing_half"
    android:paddingBottom="@dimen/spacing_half"
  />
  <include layout="@layout/information"/>
  <fragment android:name="app.zxtune.ui.SeekControlFragment"
            android:id="@+id/seek_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
  />
  <fragment android:name="app.zxtune.ui.PlaybackControlsFragment"
            android:id="@+id/playback_controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
  />
</LinearLayout>
